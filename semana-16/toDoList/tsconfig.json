{
  "compilerOptions": {
     "target": "es6",
     "module": "commonjs",
     "sourceMap": true,
     "outDir": "./build",
     "rootDir": "./src",
     "removeComments": true,      
     "noImplicitAny": true,
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": true,
     "skipLibCheck": true
  }
}